<h1>Learning Rails #1 - Blog</h1>
<div class="form-wrapper">
<%= render "posts/form" %>
</div>
<% @posts.each do |post| %>
  <div class="post-wrapper">
    <h2>
      <%= "##{post.id}" %>
      <%= post.title %>
    </h2>
    <p>
      <%= post.body %>
    </p>
    <p>
      <%= post.created_at %>
    </p>
  </div>

<% end %>
